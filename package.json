{
  "name": "fm-tool",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "rundev": "concurrently -n backend,frontend -c green,cyan \"npm:dev --workspace backend\" \"npm:dev --workspace frontend\" --kill-others-on-fail",
    "rundev-safe": "npm run dev --workspace backend & timeout 5 & npm run dev --workspace frontend",
    "rundev-original": "concurrently -n backend,frontend -c green,cyan \"npm:dev --workspace backend\" \"npm:dev --workspace frontend\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "wait-on": "^8.0.4"
  }
}
